@using Project.Models
@model dynamic
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{

}


<!DOCTYPE html>
<head>
    <title>Tên Quán Ăn</title>
</head>
<body>
    <form>

        <legend>Thông tin quán ăn</legend>
        <div>
            <label for="name">Tên:</label>
            <input type="text" name="name" id="name" />
        </div>
        <br />
        <div>
            <label for="owner">Chủ cửa hàng:</label>
            <input type="text" name="owner" id="owner" />
        </div>
        <br />
        <div>
            <label for="phone">Số Điện Thoại:</label>
            <input type="text" name="phone" id="phone" />
        </div>
        <br />
        <div>
            <label for="address">Địa Chỉ: </label>
            <input type="text" name="address" id="address" />
        </div>
        <br />
        <div>
            <label for="email">Email: </label>
            <input type="email" name="email" id="email" />
        </div>
        <br />
        <div>
            <input type="radio" id="active" name="status" value="active">
            <label for="active">Kích hoạt</label><br>
            <input type="radio" id="inactive" name="status" value="inactive">
            <label for="inactive">Vô hiệu hóa</label><br>
        </div>
        <br />
        @*chỉ khi nào xem thông tin của một quán cụ thể mới hiển thị*@
        <div>
            <label for="created_at">Ngày tạo:</label>
            <input type="text" name="created_at" id="created_at" disabled />
        </div>
        <br />
        <div>
            <label for="updated_at">Cập nhập lần cuối:</label>
            <input type="text" name="updated_at" id="updated_at" disabled />
        </div>
        @*--------------------------------------------------------*@
        <br />
        <div>
            <label for="logo">Logo</label>
            <br />
            <img src="" width="200" height="200" style="border: solid 1px">
            <form action="">
                <input type="file" id="myFile" name="filename">
            </form>
        </div>
        <div>
            <label for="description">Mô tả:</label>
            <textarea id="description" name="description">  </textarea>
        </div>
        <br />
        <div>
            <label for="bank">Ngân Hàng:</label>
            <input type="text" name="bank" id="bank" disabled />
        </div>
        <div>
            <label for="accountNumber">Số tài khoản:</label>
            <input type="text" name="accountNumber" id="accountNumber" />
        </div>
    </form>
</body>


